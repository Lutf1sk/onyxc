recv :: isz(sock isz, buf void[]) {
	it := buf.data;
	end := it + buf.count;
	while it < end {
		res := sock->read(it[0..usz:(end - it)]);
		if res <= 0 {
			return res;
		}

		it += res;
	}
	return buf.count;
};

