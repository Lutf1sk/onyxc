import "std/unix.nyx";

hton16 :: u16(v u16) {
	return (v >> 8u) | ((v & 0xFF) << 8u);
};

hton32 :: u32(v u32) {
	return	((v & 0x000000FF) << 24u) |
			((v & 0x0000FF00) << 8u) |
			((v & 0x00FF0000) >> 8u) |
			((v & 0xFF000000) >> 24u);
};

